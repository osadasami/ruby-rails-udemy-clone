div id="#{dom_id course}" class="space-y-2"
  h2 class="text-2xl"
    = link_to course.title, course
  div class="flex justify-between"
    div= course.user.username
    div= course.created_at.strftime('%Y/%m/%d')
  div
    div= course.description_short
    div= course.language
    div= course.level
    div= number_to_currency(course.price)
    div= course.average_rating
  div(class="prose")
    == course.description

